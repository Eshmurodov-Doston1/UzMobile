<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".ui.splashFragments.LanguageFragment">
    <ImageView
        android:id="@+id/splash_image"
        android:src="@drawable/uzmobile2"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintVertical_bias="0.08"
        app:layout_constraintWidth_percent="0.5"
        app:layout_constraintHeight_percent="0.2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>
    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/uz"
        android:layout_width="0dp"
        android:textColor="@color/white"
        android:textSize="@dimen/_15sdp"
        android:textAllCaps="false"
        android:textStyle="normal"
        android:text="O`zbek"
        app:layout_constraintTop_toBottomOf="@id/splash_image"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="@id/splash_image"
        app:layout_constraintRight_toRightOf="@id/splash_image"
        app:layout_constraintWidth_percent="0.5"
        app:layout_constraintHeight_percent="0.065"
        app:layout_constraintVertical_bias="0.2"
        android:background="@drawable/button"
        android:layout_height="0dp"/>
    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/ru"
        android:layout_width="0dp"
        android:textColor="@color/white"
        android:textSize="@dimen/_15sdp"
        android:textAllCaps="false"
        android:textStyle="normal"
        android:text="Русский"
        app:layout_constraintTop_toBottomOf="@id/uz"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="@id/splash_image"
        app:layout_constraintRight_toRightOf="@id/splash_image"
        app:layout_constraintWidth_percent="0.5"
        app:layout_constraintHeight_percent="0.065"
        app:layout_constraintVertical_bias="0.06"
        android:background="@drawable/button"
        android:layout_height="0dp"/>
    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/cril"
        android:layout_width="0dp"
        android:textColor="@color/white"
        android:textSize="@dimen/_15sdp"
        android:textAllCaps="false"
        android:textStyle="normal"
        android:text="Ўзбек"
        app:layout_constraintTop_toBottomOf="@id/ru"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="@id/splash_image"
        app:layout_constraintRight_toRightOf="@id/splash_image"
        app:layout_constraintWidth_percent="0.5"
        app:layout_constraintHeight_percent="0.065"
        app:layout_constraintVertical_bias="0.07"
        android:background="@drawable/button"
        android:layout_height="0dp"/>


    <TextView
        android:textSize="@dimen/_11sdp"
        app:layout_constraintTop_toBottomOf="@id/splash_image"
        app:layout_constraintLeft_toLeftOf="@id/splash_image"
        app:layout_constraintRight_toRightOf="@id/splash_image"
        app:layout_constraintVertical_bias="0.98"
        android:textColor="@color/black"
        app:layout_constraintBottom_toBottomOf="parent"
        android:text="DM Mobile Group "
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

</androidx.constraintlayout.widget.ConstraintLayout>