<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.home.HomeFragment">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/cons1"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:background="#01B4FF"
        app:layout_constraintHeight_percent="0.5"
        app:layout_constraintTop_toTopOf="parent"
        tools:layout_editor_absoluteX="0dp"/>

    <ImageView
        android:id="@+id/icon_logo"
        app:layout_constraintHorizontal_bias="0.25"
        app:layout_constraintVertical_bias="0.01"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_width="@dimen/_25sdp"
        android:src="@drawable/logo1"
        android:gravity="center"
        android:orientation="horizontal"
        android:layout_height="@dimen/_25sdp"/>
    <ImageView
        android:id="@+id/text_app"
        android:src="@drawable/ic_uzmobile"
        app:layout_constraintHorizontal_bias="0.1"
        app:layout_constraintTop_toTopOf="@id/icon_logo"
        app:layout_constraintLeft_toRightOf="@id/icon_logo"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBottom_toBottomOf="@id/icon_logo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>
    <TextView
        android:id="@+id/text"
        android:text="@string/milliy_operator"
        android:textSize="@dimen/_10sdp"
        android:textStyle="bold"
        app:layout_constraintWidth_percent="0.8"
        app:layout_constraintBottom_toBottomOf="@id/cons1"
        app:layout_constraintVertical_bias="0.04"
        app:layout_constraintTop_toBottomOf="@id/icon_logo"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="@id/view_pager2"
        android:textColor="@color/white"
        android:textAllCaps="true"
        android:gravity="center"
        android:layout_width="0dp"
        android:layout_height="wrap_content"/>
    <androidx.viewpager2.widget.ViewPager2
        android:id="@+id/view_pager2"
        app:layout_constraintTop_toBottomOf="@id/text"
       app:layout_constraintBottom_toBottomOf="@id/cons1"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintWidth_percent="0.9"
        app:layout_constraintVertical_bias="0.05"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintHeight_percent="0.55"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>
    <com.tbuonomo.viewpagerdotsindicator.SpringDotsIndicator
        android:id="@+id/spring_dots_indicator"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:dampingRatio="0.2"
        app:layout_constraintWidth_percent="0.5"
        app:dotsColor="@color/white"
        app:dotsStrokeColor="@color/white"
        app:dotsCornerRadius="@dimen/_6sdp"
        app:layout_constraintTop_toBottomOf="@id/view_pager2"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBottom_toBottomOf="@id/cons1"
        app:layout_constraintVertical_bias="0.1"
        app:dotsSize="@dimen/_7sdp"
        app:dotsSpacing="@dimen/_5sdp"
        app:dotsStrokeWidth="2dp"
        app:stiffness="300" />

    <androidx.constraintlayout.widget.ConstraintLayout
        app:layout_constraintTop_toBottomOf="@id/spring_dots_indicator"
        app:layout_constraintBottom_toBottomOf="parent"
        android:elevation="@dimen/_2sdp"
        android:background="@drawable/card_main"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintHeight_percent="0.48"
        app:layout_constraintWidth_percent="0.88"
        app:layout_constraintVertical_bias="0.2"
        android:layout_width="0dp"
        android:layout_height="0dp"
        tools:ignore="NotSibling">

        <androidx.cardview.widget.CardView
            android:id="@+id/button_card"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintVertical_bias="0.1"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintHorizontal_bias="0.02"
            android:layout_width="@dimen/_85sdp"
            android:layout_height="@dimen/_85sdp"
            android:foreground="?selectableItemBackgroundBorderless"
            android:clickable="true"
            app:cardElevation="0dp"
            app:cardCornerRadius="@dimen/_42sdp"
            android:focusable="true">

            <LinearLayout
                android:id="@+id/ussd_fr"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:clickable="true"
                android:focusable="true"
                android:foreground="?selectableItemBackgroundBorderless"
                android:gravity="center"
                android:orientation="vertical">

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:id="@+id/ussd"
                    android:layout_width="@dimen/_45sdp"
                    android:layout_height="@dimen/_45sdp"
                    android:background="@drawable/backgraund_click"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintHorizontal_bias="0.1"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintRight_toRightOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintVertical_bias="0.14">

                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:padding="@dimen/_7sdp"
                        android:src="@drawable/ic_hash" />
                </androidx.constraintlayout.widget.ConstraintLayout>

                <TextView
                    android:id="@+id/ussd_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/_10sdp"
                    android:text="@string/ussd"
                    android:textColor="@color/black"
                    android:textSize="@dimen/_10sdp"
                    android:textStyle="normal"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintLeft_toLeftOf="@id/ussd"
                    app:layout_constraintRight_toRightOf="@id/ussd"
                    app:layout_constraintTop_toBottomOf="@id/ussd"
                    app:layout_constraintVertical_bias="0.03" />
            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:id="@+id/button_card1"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toRightOf="@id/button_card"
            app:layout_constraintHorizontal_bias="0.1"
            app:layout_constraintVertical_bias="0.1"
            app:layout_constraintRight_toLeftOf="@id/button_card2"
            android:layout_width="@dimen/_85sdp"
            android:layout_height="@dimen/_85sdp"
            android:foreground="?selectableItemBackgroundBorderless"
            android:clickable="true"
            app:cardElevation="0dp"
            app:cardCornerRadius="@dimen/_42sdp"
            android:focusable="true">
            <LinearLayout
                android:gravity="center"
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="match_parent">
                <androidx.constraintlayout.widget.ConstraintLayout
                    android:id="@+id/definition"
                    app:layout_constraintTop_toTopOf="@id/ussd"
                    app:layout_constraintBottom_toBottomOf="@id/ussd"
                    app:layout_constraintLeft_toRightOf="@id/ussd"
                    app:layout_constraintRight_toLeftOf="@id/jobs"
                    app:layout_constraintVertical_bias="0.1"
                    android:background="@drawable/backgraund_click"

                    android:layout_width="@dimen/_45sdp"
                    android:layout_height="@dimen/_45sdp">
                    <ImageView
                        android:padding="@dimen/_7sdp"
                        android:src="@drawable/ic_credit_card"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"/>
                </androidx.constraintlayout.widget.ConstraintLayout>
                <TextView
                    android:id="@+id/def_tv"
                    android:textStyle="normal"
                    android:text="@string/tarif"
                    android:layout_marginTop="@dimen/_10sdp"
                    android:textSize="@dimen/_10sdp"
                    android:textColor="@color/black"
                    app:layout_constraintTop_toBottomOf="@id/definition"
                    app:layout_constraintLeft_toLeftOf="@id/definition"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintVertical_bias="0.03"
                    app:layout_constraintRight_toRightOf="@id/definition"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:id="@+id/button_card2"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toRightOf="@id/button_card1"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintVertical_bias="0.1"
            app:layout_constraintRight_toRightOf="parent"
            android:layout_width="@dimen/_85sdp"
            android:layout_height="@dimen/_85sdp"
            android:foreground="?selectableItemBackgroundBorderless"
            android:clickable="true"
            app:cardElevation="0dp"
            app:cardCornerRadius="@dimen/_42sdp"
            android:focusable="true">
            <LinearLayout
                android:orientation="vertical"
                android:gravity="center"
                android:layout_width="match_parent"
                android:layout_height="match_parent">
                <androidx.constraintlayout.widget.ConstraintLayout
                    android:id="@+id/jobs"
                    app:layout_constraintTop_toTopOf="@id/ussd"
                    app:layout_constraintBottom_toBottomOf="@id/ussd"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintRight_toRightOf="parent"
                    app:layout_constraintVertical_bias="0.1"
                    android:background="@drawable/backgraund_click"
                    app:layout_constraintHorizontal_bias="0.9"
                    android:layout_width="@dimen/_45sdp"
                    android:layout_height="@dimen/_45sdp">
                    <ImageView
                        android:padding="@dimen/_7sdp"
                        android:src="@drawable/ic_sliders"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"/>
                </androidx.constraintlayout.widget.ConstraintLayout>
                <TextView
                    android:id="@+id/jobtv"
                    android:textStyle="normal"
                    android:text="@string/xizmat"
                    android:layout_marginTop="@dimen/_10sdp"
                    android:textSize="@dimen/_10sdp"
                    android:textColor="@color/black"
                    app:layout_constraintTop_toBottomOf="@id/jobs"
                    app:layout_constraintLeft_toLeftOf="@id/jobs"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintVertical_bias="0.03"
                    app:layout_constraintRight_toRightOf="@id/jobs"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
            </LinearLayout>

        </androidx.cardview.widget.CardView>


        <androidx.cardview.widget.CardView
            android:id="@+id/button_card3"
            app:layout_constraintTop_toBottomOf="@id/button_card"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="@id/button_card"
            app:layout_constraintVertical_bias="0.7"
            app:layout_constraintRight_toRightOf="@id/button_card"
            app:layout_constraintHorizontal_bias="0.05"
            android:layout_width="@dimen/_85sdp"
            android:layout_height="@dimen/_85sdp"
            android:foreground="?selectableItemBackgroundBorderless"
            android:clickable="true"
            app:cardElevation="0dp"
            app:cardCornerRadius="@dimen/_42sdp"
            android:focusable="true">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center"
                android:orientation="vertical">
                <androidx.constraintlayout.widget.ConstraintLayout
                    android:id="@+id/minut"
                    app:layout_constraintTop_toBottomOf="@id/ussd_text"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintRight_toRightOf="parent"
                    app:layout_constraintVertical_bias="0.4"
                    android:background="@drawable/backgraund_click"
                    app:layout_constraintHorizontal_bias="0.1"
                    android:layout_width="@dimen/_45sdp"
                    android:layout_height="@dimen/_45sdp">
                    <ImageView
                        android:padding="@dimen/_7sdp"
                        android:src="@drawable/ic_phone_2"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"/>
                </androidx.constraintlayout.widget.ConstraintLayout>
                <TextView
                    android:id="@+id/minut_tv"
                    android:textStyle="normal"
                    android:text="@string/minut"
                    android:layout_marginTop="@dimen/_10sdp"
                    android:textSize="@dimen/_10sdp"
                    android:textColor="@color/black"
                    app:layout_constraintTop_toBottomOf="@id/minut"
                    app:layout_constraintLeft_toLeftOf="@id/minut"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintVertical_bias="0.1"
                    app:layout_constraintRight_toRightOf="@id/minut"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
            </LinearLayout>

        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:id="@+id/button_card4"
            app:layout_constraintTop_toTopOf="@id/button_card3"
            app:layout_constraintBottom_toBottomOf="@id/button_card3"
            app:layout_constraintLeft_toLeftOf="@id/button_card1"
            app:layout_constraintVertical_bias="0.7"
            app:layout_constraintRight_toRightOf="@id/button_card1"
            app:layout_constraintHorizontal_bias="0.05"
            android:layout_width="@dimen/_85sdp"
            android:layout_height="@dimen/_85sdp"
            android:foreground="?selectableItemBackgroundBorderless"
            android:clickable="true"
            app:cardElevation="0dp"
            app:cardCornerRadius="@dimen/_42sdp"
            android:focusable="true">
            <LinearLayout
                android:orientation="vertical"
                android:gravity="center"
                android:layout_width="match_parent"
                android:layout_height="match_parent">
                <androidx.constraintlayout.widget.ConstraintLayout
                    android:id="@+id/internet"
                    app:layout_constraintTop_toTopOf="@id/minut"
                    app:layout_constraintBottom_toBottomOf="@id/minut"
                    app:layout_constraintLeft_toRightOf="@id/ussd"
                    app:layout_constraintRight_toLeftOf="@id/jobs"
                    app:layout_constraintVertical_bias="0.14"
                    android:background="@drawable/backgraund_click"

                    android:layout_width="@dimen/_45sdp"
                    android:layout_height="@dimen/_45sdp">
                    <ImageView
                        android:padding="@dimen/_7sdp"
                        android:src="@drawable/ic_earth"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"/>
                </androidx.constraintlayout.widget.ConstraintLayout>
                <TextView
                    android:id="@+id/internet_tv"
                    android:textStyle="normal"
                    android:text="@string/internet"
                    android:layout_marginTop="@dimen/_10sdp"
                    android:textSize="@dimen/_10sdp"
                    android:textColor="@color/black"
                    app:layout_constraintTop_toBottomOf="@id/internet"
                    app:layout_constraintLeft_toLeftOf="@id/internet"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintVertical_bias="0.14"
                    app:layout_constraintRight_toRightOf="@id/internet"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:id="@+id/button_card5"
            app:layout_constraintTop_toTopOf="@id/button_card3"
            app:layout_constraintBottom_toBottomOf="@id/button_card3"
            app:layout_constraintLeft_toLeftOf="@id/button_card2"
            app:layout_constraintVertical_bias="0.7"
            app:layout_constraintRight_toRightOf="@id/button_card2"
            app:layout_constraintHorizontal_bias="0.05"
            android:layout_width="@dimen/_85sdp"
            android:layout_height="@dimen/_85sdp"
            android:foreground="?selectableItemBackgroundBorderless"
            android:clickable="true"
            app:cardElevation="0dp"
            app:cardCornerRadius="@dimen/_42sdp"
            android:focusable="true">
            <LinearLayout
                android:orientation="vertical"
                android:gravity="center"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:id="@+id/sms"
                    app:layout_constraintTop_toTopOf="@id/internet"
                    app:layout_constraintBottom_toBottomOf="@id/internet"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintRight_toRightOf="parent"
                    app:layout_constraintVertical_bias="0.1"
                    android:background="@drawable/backgraund_click"
                    app:layout_constraintHorizontal_bias="0.9"
                    android:layout_width="@dimen/_45sdp"
                    android:layout_height="@dimen/_45sdp">
                    <ImageView
                        android:padding="@dimen/_7sdp"
                        android:src="@drawable/ic_message_square"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"/>
                </androidx.constraintlayout.widget.ConstraintLayout>
                <TextView
                    android:id="@+id/sms_tv"
                    android:textStyle="normal"
                    android:text="@string/sms"
                    android:layout_marginTop="@dimen/_10sdp"
                    android:textSize="@dimen/_10sdp"
                    android:textColor="@color/black"
                    app:layout_constraintTop_toBottomOf="@id/sms"
                    app:layout_constraintLeft_toLeftOf="@id/sms"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintVertical_bias="0.03"
                    app:layout_constraintRight_toRightOf="@id/sms"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
            </LinearLayout>
        </androidx.cardview.widget.CardView>

    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.constraintlayout.widget.ConstraintLayout>