<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <androidx.constraintlayout.widget.ConstraintLayout
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:padding="@dimen/_7sdp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:background="@drawable/dialog"
        android:maxHeight="@dimen/_400sdp"
        android:layout_width="@dimen/_270sdp"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/name"
            android:paddingRight="@dimen/_5sdp"
            android:padding="@dimen/_3sdp"
            android:text="Salom"
            android:textStyle="bold"
            android:layout_marginTop="@dimen/_8sdp"
            android:textSize="@dimen/_15sdp"
            android:textColor="@color/black"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintWidth_percent="0.65"
            app:layout_constraintHorizontal_bias="0.1"
            android:maxLines="2"
            android:layout_width="0dp"
            android:layout_height="wrap_content"/>
        <androidx.cardview.widget.CardView
            android:id="@+id/share"
            app:layout_constraintRight_toRightOf="parent"
            android:clickable="true"
            android:focusable="true"
            android:foreground="?selectableItemBackgroundBorderless"
            app:layout_constraintTop_toTopOf="@id/name"
            app:layout_constraintBottom_toBottomOf="@id/name"
            app:layout_constraintLeft_toRightOf="@id/name"
            app:layout_constraintHorizontal_bias="0.9"
            android:layout_width="@dimen/_30sdp"
            app:cardElevation="0dp"
            app:cardCornerRadius="@dimen/_15sdp"
            android:layout_height="@dimen/_30sdp">
            <ImageView
                android:src="@drawable/ic_share_2"
                android:padding="@dimen/_7sdp"
                android:layout_width="match_parent"
                android:layout_height="match_parent"/>
        </androidx.cardview.widget.CardView>
        <TextView
            android:id="@+id/info"
            android:layout_marginTop="@dimen/_5sdp"
            app:layout_constraintTop_toBottomOf="@id/name"
            app:layout_constraintLeft_toLeftOf="@id/name"
            app:layout_constraintRight_toRightOf="@id/share"
            android:padding="@dimen/_5sdp"
            android:textColor="@color/black"
            android:textSize="@dimen/_12sdp"
            android:textStyle="normal"
            android:text="dasfdssvdsfvsdfdsfsddsfdsfdsfdsfdsfdfdsfdsfdsdsfdsfsdfdsfdsfds"
            android:layout_width="0dp"
            android:layout_height="wrap_content"/>
        <TextView
            android:id="@+id/info1"
            android:layout_marginTop="@dimen/_10sdp"
            app:layout_constraintTop_toBottomOf="@id/info"
            app:layout_constraintLeft_toLeftOf="@id/name"
            app:layout_constraintRight_toRightOf="@id/share"
            android:padding="@dimen/_5sdp"
            android:textColor="@color/black"
            android:textSize="@dimen/_12sdp"
            android:textStyle="normal"
            android:text="dasfdssvdsfvsdfdsfsddsfdsfdsfdsfdsfdfdsfdsfdsdsfdsfsdfdsfdsfds"
            android:layout_width="0dp"
            android:layout_height="wrap_content"/>
        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/active"
            android:text="Aktivlashtirish"
            android:textStyle="normal"
            android:textSize="@dimen/_13sdp"
            android:textColor="@color/white"
            app:layout_constraintTop_toBottomOf="@id/info1"
            app:layout_constraintLeft_toLeftOf="@id/info"
            app:layout_constraintRight_toRightOf="@id/info"
            android:background="@drawable/button1"
            android:layout_marginTop="@dimen/_10sdp"
            android:layout_width="0dp"
            android:layout_height="wrap_content"/>
        <TextView
            android:id="@+id/clouse"
            app:layout_constraintTop_toBottomOf="@id/active"
            app:layout_constraintRight_toRightOf="@id/active"
            android:layout_marginTop="@dimen/_10sdp"
            android:textColor="#01B4FF"
            android:textSize="@dimen/_10sdp"
            android:text="orqaga"
            android:textStyle="normal"
            android:textAllCaps="true"
            android:padding="@dimen/_3sdp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.constraintlayout.widget.ConstraintLayout>