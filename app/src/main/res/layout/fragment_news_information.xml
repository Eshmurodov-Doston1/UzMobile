<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".ui.news.NewsInformationFragment">
    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <TextView
                android:gravity="center"
                android:id="@+id/name"
                android:textSize="@dimen/_18sdp"
                android:text="Salom"
                android:textColor="@color/black"
                android:textStyle="bold"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintWidth_percent="0.95"
                android:layout_marginTop="15sp"
                android:layout_width="0dp"
                android:layout_height="wrap_content"/>
            <androidx.cardview.widget.CardView
                android:id="@+id/card"
                app:layout_constraintTop_toBottomOf="@id/name"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintWidth_percent="0.95"
                android:layout_marginTop="@dimen/_10sdp"
                app:cardElevation="0dp"
                app:cardCornerRadius="@dimen/_6sdp"
                android:layout_width="0dp"
                android:layout_height="@dimen/_150sdp">
                <ImageView
                    android:id="@+id/image_news1"
                    android:scaleType="centerCrop"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"/>
            </androidx.cardview.widget.CardView>
            <TextView
                android:id="@+id/info1"
                android:gravity="start"
                app:layout_constraintTop_toBottomOf="@id/card"
                app:layout_constraintLeft_toLeftOf="@id/card"
                app:layout_constraintRight_toRightOf="@id/card"
                android:layout_marginTop="@dimen/_10sdp"
                android:textStyle="normal"
                android:textColor="@color/black"
                android:textSize="@dimen/_13sdp"
                android:layout_width="0dp"
                android:layout_height="wrap_content"/>
            <androidx.cardview.widget.CardView
                android:id="@+id/card2"
                android:visibility="gone"
                app:layout_constraintTop_toBottomOf="@id/info1"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintWidth_percent="0.95"
                android:layout_marginTop="@dimen/_10sdp"
                app:cardCornerRadius="@dimen/_6sdp"
                android:layout_width="0dp"
                android:layout_height="@dimen/_150sdp">
                <ImageView
                    android:id="@+id/image_news2"
                    android:scaleType="centerCrop"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"/>
            </androidx.cardview.widget.CardView>
            <TextView
                android:visibility="gone"
                android:id="@+id/info2"
                android:gravity="start"
                app:cardElevation="0dp"
                app:layout_constraintTop_toBottomOf="@id/card2"
                app:layout_constraintLeft_toLeftOf="@id/card2"
                app:layout_constraintRight_toRightOf="@id/card2"
                android:layout_marginTop="@dimen/_10sdp"
                android:textStyle="normal"
                android:textColor="@color/black"
                android:textSize="@dimen/_13sdp"
                android:layout_width="0dp"
                android:layout_height="wrap_content"/>
        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.core.widget.NestedScrollView>
</androidx.constraintlayout.widget.ConstraintLayout>