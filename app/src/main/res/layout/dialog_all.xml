<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <androidx.constraintlayout.widget.ConstraintLayout
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintHeight_percent="0.9"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_width="@dimen/_270sdp"
        android:background="@drawable/dialog"
        android:layout_height="@dimen/_450sdp">
        <androidx.core.widget.NestedScrollView
            android:id="@+id/scroll"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintHeight_percent="0.9"
            android:layout_width="match_parent"
            android:layout_height="0dp">
            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">
                <TextView
                    android:id="@+id/dialog_name"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintRight_toRightOf="parent"
                    app:layout_constraintHorizontal_bias="0.05"
                    android:layout_marginTop="@dimen/_15sdp"
                    app:layout_constraintTop_toTopOf="parent"
                    android:text="@string/batafsil"
                    android:textSize="@dimen/_14sdp"
                    android:textStyle="bold"
                    android:textColor="@color/black"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
                <androidx.cardview.widget.CardView
                    android:id="@+id/share"
                    app:layout_constraintRight_toRightOf="parent"
                    android:clickable="true"
                    android:focusable="true"
                    android:foreground="?selectableItemBackgroundBorderless"
                    app:layout_constraintTop_toTopOf="@id/dialog_name"
                    app:layout_constraintBottom_toBottomOf="@id/dialog_name"
                    app:layout_constraintLeft_toRightOf="@id/dialog_name"
                    app:layout_constraintHorizontal_bias="0.95"
                    android:layout_width="@dimen/_30sdp"
                    app:cardElevation="0dp"
                    app:cardCornerRadius="@dimen/_15sdp"
                    android:layout_height="@dimen/_30sdp">
                    <ImageView
                        android:src="@drawable/ic_share_2"
                        android:padding="@dimen/_7sdp"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"/>
                </androidx.cardview.widget.CardView>
                <TextView
                    android:id="@+id/info"
                    app:layout_constraintTop_toBottomOf="@id/dialog_name"
                    app:layout_constraintLeft_toLeftOf="@id/dialog_name"
                    app:layout_constraintRight_toRightOf="@id/share"
                    android:layout_marginTop="@dimen/_8sdp"
                    android:textColor="@color/black"
                    android:textStyle="normal"
                    android:textSize="@dimen/_11sdp"
                    android:text="@string/app_name"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"/>
            </androidx.constraintlayout.widget.ConstraintLayout>
        </androidx.core.widget.NestedScrollView>
        <androidx.constraintlayout.widget.ConstraintLayout
            app:layout_constraintTop_toBottomOf="@id/scroll"
            app:layout_constraintLeft_toLeftOf="@id/scroll"
            app:layout_constraintRight_toRightOf="@id/scroll"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_width="0dp"
            android:layout_height="0dp">
            <androidx.cardview.widget.CardView
                android:id="@+id/ok_btn"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintHorizontal_bias="0.95"
                app:cardElevation="0dp"
                app:cardCornerRadius="@dimen/_5sdp"
                android:clickable="true"
                android:focusable="true"
                android:foreground="?selectableItemBackgroundBorderless"
                android:background="@color/white"
                android:layout_width="@dimen/_50sdp"
                android:layout_height="@dimen/_35sdp">
                <LinearLayout
                    android:gravity="center"
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">
                    <TextView
                        android:textColor="#01B4FF"
                        android:text="Ok"
                        android:textSize="@dimen/_13sdp"
                        android:textStyle="normal"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>
                </LinearLayout>
            </androidx.cardview.widget.CardView>
        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.constraintlayout.widget.ConstraintLayout>